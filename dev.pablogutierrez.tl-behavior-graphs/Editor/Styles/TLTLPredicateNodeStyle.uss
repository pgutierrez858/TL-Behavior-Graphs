/* CONTAINERS */

.tltl-predicate-node__extension-container
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-1);
	padding: var(--tltl-predicate-metrics-window-pixels-8);
}

.tltl-predicate-node__main-container
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-1);
}

.tltl-predicate-node__custom-data-container
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-3);
	border-radius: var(--tltl-predicate-metrics-window-pixels-4);
	padding: var(--tltl-predicate-metrics-window-pixels-8);
}

/* INPUTS */

.tltl-predicate-node__text-field
{
	background-color: transparent;
	border-color: transparent;
	/* max-width: var(--tltl-predicate-metrics-window-pixels-240); */
	min-width: var(--tltl-predicate-metrics-window-pixels-120);
	padding: var(--tltl-predicate-metrics-window-pixels-8);
}

/*
.tltl-predicate-node__filename-text-field
{
	max-width: var(--tltl-predicate-metrics-window-pixels-1000);
	margin: var(--tltl-predicate-metrics-window-pixels-4);
	padding: var(--tltl-predicate-metrics-window-pixels-4);
}
*/

.tltl-predicate-node__choice-text-field > .unity-text-field__input
{
	font-size: var(--tltl-predicate-metrics-window-pixels-12);
	height: var(--tltl-predicate-metrics-window-pixels-35);
	max-width: var(--tltl-predicate-metrics-window-pixels-1000);
	min-width: var(--tltl-predicate-metrics-window-pixels-0);
}

.tltl-predicate-node__choice-text-field > .unity-text-field__input:focus
{
	height: var(--tltl-predicate-metrics-window-pixels-25);
	margin: var(--tltl-predicate-metrics-window-pixels-4);
	padding: var(--tltl-predicate-metrics-window-pixels-4);
}

.tltl-predicate-node__quote-text-field > .unity-text-field__input
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-4);
	border-color: transparent;
	border-left-color: var(--tltl-predicate-colors-window-dark-grey-6);
	border-left-width: var(--tltl-predicate-metrics-window-pixels-4);
	padding: var(--tltl-predicate-metrics-window-pixels-16);
	max-width: var(--tltl-predicate-metrics-window-pixels-600);
}

.tltl-predicate-node__quote-text-field > .unity-text-field__input:hover
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-5);
}

.tltl-predicate-node__quote-text-field > .unity-text-field__input:focus
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-1);
	border-color: var(--tltl-predicate-colors-window-dark-grey-6);
}

/* BUTTONS */

.tltl-predicate-node__button
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-5);
	border-color: var(--tltl-predicate-colors-window-dark-grey-1);
	margin: var(--tltl-predicate-metrics-window-pixels-4);
	max-height: var(--tltl-predicate-metrics-window-pixels-25);
}

.tltl-predicate-node__button:hover
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-2);
}

.tltl-predicate-node__button:active
{
	background-color: var(--tltl-predicate-colors-window-dark-grey-3);
	color: var(--tltl-predicate-colors-window-yellow);
}

/* ELEMENTS */

TextField
{
	margin-left: var(--tltl-predicate-metrics-window-pixels-0);
}

Label
{
	margin-left: var(--tltl-predicate-metrics-window-pixels-0);

}

.tltl-predicate-node__custom-data-container > Foldout
{
	margin-left: var(--tltl-predicate-metrics-window-pixels-n4);
	margin-top: var(--tltl-predicate-metrics-window-pixels-4);
}

.tltl-predicate-node__custom-data-container > Foldout > Label
{
	margin-left: var(--tltl-predicate-metrics-window-pixels-n12);
	margin-top: var(--tltl-predicate-metrics-window-pixels-8);
}

/* BUILT IN */

.unity-toggle__text
{
	margin-left: var(--tltl-predicate-metrics-window-pixels-2);
}